ifeq ($(strip $(DEVKITARM)),)
$(error "Please set DEVKITARM in your environment. export DEVKITARM=<path to>devkitARM")
endif

ifeq ($(strip $(CTRULIB)),)
$(error "Please set CTRULIB in your environment. export DEVKITARM=<path to>ctrulib/libctru")
endif

ifeq ($(filter $(DEVKITARM)/bin,$(PATH)),)
export PATH:=$(DEVKITARM)/bin:$(PATH)
endif

SCRIPTS = "../scripts"

all: menu_payload_regionfree.bin menu_payload_loadropbin.bin

clean:
	@rm -f menu_payload_regionfree.bin menu_payload_loadropbin.bin
	@echo "all cleaned up !"

%.bin: %.s
	@armips $<
